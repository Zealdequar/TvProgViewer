<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jsTree/themes/default/style.css" rel="stylesheet" />
    <link href="~/Content/ui.jqgrid.min.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.0.min.js"></script>
    <script src="~/Scripts/jsTree3/jstree.js"></script>
    <script src="~/Scripts/free-jqGrid/i18n/min/grid.locale-ru.js"></script>
    <script src="~/Scripts/free-jqGrid/jquery.jqgrid.min.js"></script>
    <script src="~/Scripts/free-jqGrid/jquery.jqgrid.src.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#"><img src="~/imgs/i/LCD-TV-Panel128x128.png" title="TVProgViewer" style="position: absolute; top:-33px;left:10px;" /></a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_ChannelsPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
    </div>
    <div class="row panel">
        <div class="col-xs-12">
            @RenderBody()
        </div>
    </div>
    <br />
    <footer class="col-xs-12">
        <p>&copy; 2012 — @DateTime.Now.Year TVProgViewer</p>
    </footer>
    @RenderSection("scripts", required: true)
</body>
</html>