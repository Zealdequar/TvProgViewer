using System;
using System.Collections.Generic;
using System.Drawing;
using System.Linq;
using System.Runtime.Serialization;
using System.Text;

namespace TVProgViewer.BusinessLogic.ProgObjs
{
    [DataContract]
    public class Channel
    {
        private bool _visible;
        private string _name;
        private uint _number;
        private string _userSyn;
        private Image _emblem;
        private string _diff;

        public Channel(bool visible, string name, uint number, string userSyn, Image emblem, string diff)
        {
            _visible = visible;
            _name = name;
            _number = number;
            _userSyn = userSyn;
            _emblem = emblem;
            _diff = diff;
        }
        [DataMember]
        public bool Visible
        {
            get { return _visible; }
            set { _visible = value; }
        }

        [DataMember]
        public string Name
        {
            get { return _name; }
            set { _name = value; }
        }

        [DataMember]
        public uint Number
        {
            get { return _number; }
            set { _number = value; }
        }

        [DataMember]
        public string UserSyn
        {
            get { return _userSyn; }
            set { _userSyn = value; }
        }

        [DataMember]
        public Image Emblem
        {
            get { return _emblem; }
            set { _emblem = value; }
        }
        
        [DataMember]
        public string Diff
        {
            get { return _diff; }
            set { _diff = value; }
        }
    }
}
