@using TVProgViewer.Core
@inject TVProgViewer.Services.Localization.ILanguageService languageService
@inject TVProgViewer.Core.Domain.Common.CommonSettings commonSettings
@inject IThemeContext themeContext
@inject IWorkContext workContext;
@{
    var themeName = await themeContext.GetWorkingThemeNameAsync();
}
<!DOCTYPE html>
<html lang="@languageService.GetTwoLetterIsoLanguageName(await workContext.GetWorkingLanguageAsync())" @Html.TvProgPageCssClasses()>
<head>
    <title>@Html.TvProgTitle()</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <link href="@Url.Content($"~/Themes/{themeName}/Content/css/print.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/lib_npm/jquery/jquery.min.js")"></script>
    @*/when jQuery migrate script logging is active you will see the log in the browser console*@
    @if (commonSettings.JqueryMigrateScriptLoggingActive)
    {
        <script src="@Url.Content("~/lib_npm/jquery-migrate/jquery-migrate.js")"></script>
    }
    else
    {
        <script src="@Url.Content("~/lib_npm/jquery-migrate/jquery-migrate.min.js")"></script>
    }
    @Html.TvProgInlineScripts(ResourceLocation.Head)
</head>
<body>
    @RenderBody()
    @Html.TvProgInlineScripts(ResourceLocation.Footer)
</body>
</html>
