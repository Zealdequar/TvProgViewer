@model UserAttributeModel

@{
    const string hideInfoBlockAttributeName = "UserAttributePage.HideCommonBlock";
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentUserAsync(), hideInfoBlockAttributeName);

    const string hideValuesBlockAttributeName = "UserAttributePage.HideValuesBlock";
    var hideValuesBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentUserAsync(), hideValuesBlockAttributeName);
}

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <tvprog-cards id="userattribute-cards">
                <tvprog-card asp-name="userattribute-info" asp-icon="fa fa-info" asp-title="@T("Admin.Users.UserAttributes.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</tvprog-card>
                <tvprog-card asp-name="userattribute-values" asp-icon="fa fa-check-square-o" asp-title="@T("Admin.Users.UserAttributes.Values")" asp-hide-block-attribute-name="@hideValuesBlockAttributeName" asp-hide="@hideValuesBlock" asp-advanced="true">@await Html.PartialAsync("_CreateOrUpdate.Values", Model)</tvprog-card>

                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.UserAttributeDetailsBlock, additionalData = Model })
            </tvprog-cards>
        </div>
    </div>
</section>