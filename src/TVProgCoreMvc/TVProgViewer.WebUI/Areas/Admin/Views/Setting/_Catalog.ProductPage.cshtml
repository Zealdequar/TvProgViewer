@model CatalogSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="ShowFreeShippingNotification_OverrideForStore" asp-input="ShowFreeShippingNotification" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="ShowFreeShippingNotification" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="ShowFreeShippingNotification" />
            <span asp-validation-for="ShowFreeShippingNotification"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowViewUnpublishedProductPage_OverrideForStore" asp-input="AllowViewUnpublishedProductPage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowViewUnpublishedProductPage" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowViewUnpublishedProductPage" />
            <span asp-validation-for="AllowViewUnpublishedProductPage"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="DisplayDiscontinuedMessageForUnpublishedProducts_OverrideForStore" asp-input="DisplayDiscontinuedMessageForUnpublishedProducts" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="DisplayDiscontinuedMessageForUnpublishedProducts" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="DisplayDiscontinuedMessageForUnpublishedProducts" />
            <span asp-validation-for="DisplayDiscontinuedMessageForUnpublishedProducts"></span>
        </div>
    </div>
</div>