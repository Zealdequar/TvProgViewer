@model VendorSettingsModel

<div class="panel-body">
    <script>
        $(document).ready(function () {
            $("#@Html.IdFor(model => model.AllowVendorsToEditInfo)").click(toggleAllowVendorsToEditInfo);
            $("#@Html.IdFor(model => model.AllowUsersToApplyForVendorAccount)").click(toggleAllowUsersToApplyForVendorAccount);

            toggleAllowVendorsToEditInfo();
            toggleAllowUsersToApplyForVendorAccount();
        });

        function toggleAllowVendorsToEditInfo() {
            if ($('#@Html.IdFor(model => model.AllowVendorsToEditInfo)').is(':checked')) {
                $('#pnlNotifyStoreOwnerAboutVendorInformationChange').show();
            } else {
                $('#pnlNotifyStoreOwnerAboutVendorInformationChange').hide();
            }
        }

        function toggleAllowUsersToApplyForVendorAccount() {
            if ($('#@Html.IdFor(model => model.AllowUsersToApplyForVendorAccount)').is(':checked')) {
                $('#pnlTermsOfServiceEnabled').show();
            } else {
                $('#pnlTermsOfServiceEnabled').hide();
            }
        }
    </script>
    <div class="form-group">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowUsersToApplyForVendorAccount_OverrideForStore" asp-input="AllowUsersToApplyForVendorAccount" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowUsersToApplyForVendorAccount" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowUsersToApplyForVendorAccount" />
            <span asp-validation-for="AllowUsersToApplyForVendorAccount"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="AllowUsersToApplyForVendorAccount">
        <div class="form-group" id="pnlTermsOfServiceEnabled">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="TermsOfServiceEnabled_OverrideForStore" asp-input="TermsOfServiceEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="TermsOfServiceEnabled" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="TermsOfServiceEnabled" />
                <span asp-validation-for="TermsOfServiceEnabled"></span>
            </div>
        </div>
    </tvprog-nested-setting>
    <div class="form-group advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowVendorsToEditInfo_OverrideForStore" asp-input="AllowVendorsToEditInfo" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowVendorsToEditInfo" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowVendorsToEditInfo" />
            <span asp-validation-for="AllowVendorsToEditInfo"></span>
        </div>
    </div>
    <tvprog-nested-setting asp-for="AllowVendorsToEditInfo">
        <div class="form-group advanced-setting" id="pnlNotifyStoreOwnerAboutVendorInformationChange">
            <div class="col-md-3">
                <tvprog-override-store-checkbox asp-for="NotifyStoreOwnerAboutVendorInformationChange_OverrideForStore" asp-input="NotifyStoreOwnerAboutVendorInformationChange" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <tvprog-label asp-for="NotifyStoreOwnerAboutVendorInformationChange" />
            </div>
            <div class="col-md-9">
                <tvprog-editor asp-for="NotifyStoreOwnerAboutVendorInformationChange" />
                <span asp-validation-for="NotifyStoreOwnerAboutVendorInformationChange"></span>
            </div>
        </div>
    </tvprog-nested-setting>
    <div class="form-group advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="MaximumProductNumber_OverrideForStore" asp-input="MaximumProductNumber" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="MaximumProductNumber" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="MaximumProductNumber" />
            <span asp-validation-for="MaximumProductNumber"></span>
        </div>
    </div>
    <div class="form-group advanced-setting">
        <div class="col-md-3">
            <tvprog-override-store-checkbox asp-for="AllowVendorsToImportProducts_OverrideForStore" asp-input="AllowVendorsToImportProducts" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <tvprog-label asp-for="AllowVendorsToImportProducts" />
        </div>
        <div class="col-md-9">
            <tvprog-editor asp-for="AllowVendorsToImportProducts" />
            <span asp-validation-for="AllowVendorsToImportProducts"></span>
        </div>
    </div>
</div>
