@model AddressAttributeModel

@{
    const string hideInfoBlockAttributeName = "AddressAttributePage.HideInfoBlock";
    var hideInfoBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentUser, hideInfoBlockAttributeName);

    const string hideValuesBlockAttributeName = "AddressAttributePage.HideValuesBlock";
    var hideValuesBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentUser, hideValuesBlockAttributeName, defaultValue: true);
}

<div class="content">
    <div asp-validation-summary="All"></div>
    <input asp-for="Id" type="hidden" />

    <div class="form-horizontal">
        <tvprog-panels id="addressattribute-panels">
            <tvprog-panel asp-name="address-info" asp-icon="fa fa-info" asp-title="@T("Admin.Address.AddressAttributes.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</tvprog-panel>
            <tvprog-panel asp-name="address-values" asp-icon="fa fa-check-square-o" asp-title="@T("Admin.Address.AddressAttributes.Values")" asp-hide-block-attribute-name="@hideValuesBlockAttributeName" asp-hide="@hideValuesBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Values", Model)</tvprog-panel>

            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.AddressAttributeDetailsBlock, additionalData = Model })
        </tvprog-panels>
    </div>
</div>